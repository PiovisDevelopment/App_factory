# =============================================================================
# D084 - Environment Configuration Template
# =============================================================================
# Application: {{project.name}}
# Version: {{project.version}}
# Generated: {{timestamp}}
#
# Architecture: Plugin Option C (Tauri + React + Python subprocess via stdio IPC)
# Protocol: JSON-RPC 2.0 over stdin/stdout (newline-delimited)
#
# This file contains environment variables for the application.
# Copy to .env and modify values as needed.
# Lines starting with # are comments and will be ignored.
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name (do not change unless you know what you're doing)
APP_NAME={{project.name}}

# Application version
APP_VERSION={{project.version}}

# Environment mode: development | production
APP_ENV={{build.mode}}

# Enable debug mode (true | false)
# Debug mode enables verbose logging and development features
DEBUG=false

# =============================================================================
# DIRECTORY PATHS
# =============================================================================
# Paths can be absolute or relative to the application root
# Use forward slashes (/) for cross-platform compatibility

# Directory containing plugin files
PLUGIN_DIR=./plugins

# Directory containing configuration files
CONFIG_DIR=./config

# Directory for application data
DATA_DIR=./data

# Directory for log files
LOG_DIR=./logs

# Directory for cache files
CACHE_DIR=./cache

# Directory for temporary files
TEMP_DIR=./temp

# =============================================================================
# PLUGIN HOST SETTINGS
# =============================================================================

# Log level for plugin host: debug | info | warning | error
PLUGIN_HOST_LOG_LEVEL=info

# Request timeout in milliseconds
PLUGIN_HOST_TIMEOUT=30000

# Maximum number of concurrent requests
PLUGIN_HOST_MAX_CONCURRENT=10

# Enable plugin hot-swap (true | false)
PLUGIN_HOST_HOT_SWAP=true

# Enable plugin health monitoring (true | false)
PLUGIN_HOST_HEALTH_ENABLED=true

# Health check interval in milliseconds
PLUGIN_HOST_HEALTH_INTERVAL=30000

# Maximum consecutive health check failures
PLUGIN_HOST_HEALTH_MAX_FAILURES=3

# =============================================================================
# IPC SETTINGS
# =============================================================================

# IPC buffer size in bytes
IPC_BUFFER_SIZE=65536

# IPC health check interval in milliseconds
IPC_HEALTH_INTERVAL=30000

# IPC request queue size
IPC_QUEUE_SIZE=100

# Enable IPC message logging (true | false)
# Warning: Can generate large log files in production
IPC_LOG_MESSAGES=false

# =============================================================================
# PYTHON SETTINGS
# =============================================================================

# Python executable path (leave empty for auto-detection)
# Examples:
#   PYTHON_PATH=python
#   PYTHON_PATH=python3
#   PYTHON_PATH=C:\Python311\python.exe
PYTHON_PATH=

# Disable Python output buffering for real-time IPC
# Do not change unless you understand the implications
PYTHONUNBUFFERED=1

# Python hash seed for reproducibility (optional)
# PYTHONHASHSEED=0

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level: debug | info | warning | error
LOG_LEVEL=info

# Maximum log file size in MB
LOG_MAX_SIZE_MB=10

# Number of log files to keep
LOG_MAX_FILES=5

# Log format: simple | detailed | json
LOG_FORMAT=detailed

# Enable console logging (true | false)
LOG_CONSOLE=true

# Enable file logging (true | false)
LOG_FILE=true

# =============================================================================
# WINDOW SETTINGS
# =============================================================================

# Default window width in pixels
WINDOW_WIDTH=1280

# Default window height in pixels
WINDOW_HEIGHT=720

# Minimum window width in pixels
WINDOW_MIN_WIDTH=640

# Minimum window height in pixels
WINDOW_MIN_HEIGHT=480

# Start window maximized (true | false)
WINDOW_MAXIMIZED=false

# Start window in fullscreen (true | false)
WINDOW_FULLSCREEN=false

# Enable window transparency (true | false)
WINDOW_TRANSPARENT=false

# =============================================================================
# THEME SETTINGS
# =============================================================================

# Theme mode: light | dark | system
THEME_MODE=system

# Primary color (hex format)
THEME_PRIMARY_COLOR={{theme.primaryColor}}

# Secondary color (hex format)
THEME_SECONDARY_COLOR={{theme.secondaryColor}}

# Accent color (hex format)
THEME_ACCENT_COLOR={{theme.accentColor}}

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable hardware acceleration (true | false)
HARDWARE_ACCELERATION=true

# Enable smooth scrolling (true | false)
SMOOTH_SCROLLING=true

# Animation duration multiplier (0 = no animations, 1 = normal, 2 = slow)
ANIMATION_SPEED=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable Content Security Policy (true | false)
CSP_ENABLED=true

# Enable plugin signature verification (true | false)
VERIFY_PLUGIN_SIGNATURES=false

# Enable plugin sandboxing (true | false)
PLUGIN_SANDBOX=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# These settings are only used when APP_ENV=development

# Enable React DevTools (true | false)
DEV_REACT_DEVTOOLS=false

# Enable source maps (true | false)
DEV_SOURCE_MAPS=true

# Enable hot module replacement (true | false)
DEV_HMR=true

# Development server port
DEV_PORT=5173

# Enable verbose error messages (true | false)
DEV_VERBOSE_ERRORS=true

# Watch for plugin file changes (true | false)
DEV_WATCH_PLUGINS=true

# =============================================================================
# API KEYS AND SECRETS
# =============================================================================
# IMPORTANT: Never commit actual API keys to version control!
# Use environment-specific .env files (.env.local, .env.production)

# Example API key (replace with actual values)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GEMINI_API_KEY=...

# =============================================================================
# CUSTOM VARIABLES
# =============================================================================
# Add your custom environment variables below

{{#each env}}
{{@key}}={{this}}
{{/each}}

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
