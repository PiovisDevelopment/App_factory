{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/core/tauri-config-schema/schema.json",
  "_comment": "D081 - Tauri configuration template for exported projects",
  "_generated": "{{timestamp}}",
  "_project": "{{project.name}}",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "{{project.name}}",
    "version": "{{project.version}}"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "plugin_host",
            "sidecar": true
          }
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APP/*", "$RESOURCE/*", "$CONFIG/*", "$DATA/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true,
        "message": true,
        "ask": true,
        "confirm": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "window": {
        "all": false,
        "create": true,
        "center": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "requestUserAttention": true,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": true,
        "setIcon": true,
        "setMaxSize": true,
        "setMinSize": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setTitle": true,
        "show": true,
        "unmaximize": true,
        "unminimize": true
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Copyright {{build.year}} {{project.author}}",
      "externalBin": [
        "binaries/plugin_host"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "{{project.identifier}}",
      "longDescription": "{{project.description}}",
      "resources": [
        "plugins/*",
        "config/*",
        "assets/*"
      ],
      "shortDescription": "{{project.shortDescription}}",
      "targets": "{{build.targets}}",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": "en-US"
        }
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": null,
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "providerShortName": null,
        "signingIdentity": null
      },
      "linux": {
        "appimage": {
          "bundleMediaFramework": false
        },
        "deb": {
          "depends": []
        },
        "rpm": {
          "depends": []
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost; font-src 'self' data:; connect-src 'self' ipc: tauri:"
    },
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": true,
      "pubkey": ""
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "width": 1280,
        "minHeight": 480,
        "minWidth": 640,
        "resizable": true,
        "title": "{{project.name}}",
        "center": true,
        "decorations": true,
        "fileDropEnabled": true,
        "visible": true,
        "focus": true,
        "transparent": false,
        "skipTaskbar": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "cli": {
      "description": "{{project.name}} CLI",
      "longDescription": "{{project.description}}",
      "beforeHelp": "",
      "afterHelp": "",
      "args": []
    }
  }
}
